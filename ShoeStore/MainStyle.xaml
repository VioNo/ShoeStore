<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    
    <!-- Основные настройки приложения -->
    <Style TargetType="Page">
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Times New Roman"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Times New Roman"/>
    </Style>

    <!-- Основной фон для Grid -->
    <Style TargetType="Grid">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для дополнительных контейнеров --><!--
    <Style TargetType="Border">
        <Setter Property="Background" Value="#7FFF00"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>-->

    <!-- Стиль для акцентных элементов -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="#00FA9A"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <!-- Стиль для товаров со скидкой > 15% -->
    <Style x:Key="HighDiscountStyle" TargetType="Border">
        <Setter Property="Background" Value="#2E8B57"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>

    <!-- Стили для текстовых элементов -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,20"/>
        <Setter Property="Foreground" Value="#2E8B57"/>
    </Style>

    <Style x:Key="LabelText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="5,5,5,2"/>
    </Style>

    <!-- Стили для полей ввода -->
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#7FFF00"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#7FFF00"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Стили для выпадающих списков -->
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#7FFF00"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Основной стиль кнопок -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="10,5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Background" Value="#7FFF00"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#2E8B57"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#00FA9A"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2E8B57"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль акцентной кнопки -->
    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#00FA9A"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="220"/>
    </Style>

    <!-- Стиль для ListView -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#7FFF00"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F0FFF0"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#00FA9A"/>
                <Setter Property="Foreground" Value="Black"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для GridView -->
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="#7FFF00"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="auto"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- Стиль для панелей -->
    <Style TargetType="StackPanel">
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="WrapPanel">
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!-- Стиль для изображений -->
    <Style TargetType="Image">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для меток форм -->
    <Style x:Key="FormHeader" TargetType="Border">
        <Setter Property="Background" Value="#7FFF00"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="CornerRadius" Value="0,0,5,5"/>
    </Style>

</ResourceDictionary>