<Page x:Class="ShoeStore.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoeStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!--Уникальные конвертеры для GuestPage-->
            <local:GuestImagePathConverter x:Key="GuestImagePathConverter"/>
            <local:GuestDiscountToVisibilityConverter x:Key="GuestDiscountToVisibilityConverter"/>
            <local:GuestDiscountColorConverter x:Key="GuestDiscountColorConverter"/>
            <local:GuestRowBackgroundConverter x:Key="GuestRowBackgroundConverter"/>
            <local:GuestPriceDisplayConverter x:Key="GuestPriceDisplayConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource HeaderText}" Text="ПРОСМОТР ТОВАРОВ - ГОСТЬ"/>
            </StackPanel>
        </Border>

        <!-- Основной контент с вертикальным скроллом -->
        <Border Grid.Row="1" Background="White" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="5">
                <ItemsControl Name="ItemsControlTovar" 
                              ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Каждая карточка товара как строка таблицы -->
                            <Border BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Padding="15"
                                    Margin="10,5,10,5">
                                <!-- Динамический фон строки -->
                                <Border.Background>
                                    <MultiBinding Converter="{StaticResource GuestRowBackgroundConverter}">
                                        <Binding Path="Discount"/>
                                        <Binding Path="Quantity"/>
                                    </MultiBinding>
                                </Border.Background>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Фото товара -->
                                    <Border Grid.Row="0" Grid.Column="0" 
                                            Grid.RowSpan="7" 
                                            Margin="0,0,15,0"
                                            Width="100" 
                                            Height="100">
                                        <Image Source="{Binding Photo, Converter={StaticResource GuestImagePathConverter}}" 
                                               Stretch="Uniform"/>
                                    </Border>

                                    <!-- Первая строка: Категория товара и Наименование товара -->
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Категория товара:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Categories.Category}" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    <!-- Наименование товара -->
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding Types.Type}" 
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#333333"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,0,5"/>

                                    <!-- Вторая строка: Описание товара и Скидка -->
                                    <Grid Grid.Row="1" Grid.Column="1" Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Описание товара:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Description}" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Margin="5,0,0,0"
                                                   MaxHeight="40"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>

                                    <!-- Скидка -->
                                    <Border Grid.Row="1" Grid.Column="1" 
                                            CornerRadius="3"
                                            Padding="5 2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,2,0,0">

                                        <Border.Background>
                                            <Binding Path="Discount" Converter="{StaticResource GuestDiscountColorConverter}"/>
                                        </Border.Background>

                                        <Border.Visibility>
                                            <Binding Path="Discount" Converter="{StaticResource GuestDiscountToVisibilityConverter}"/>
                                        </Border.Visibility>

                                        <TextBlock Text="{Binding Discount, StringFormat={}{0}%}" 
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="11"/>
                                    </Border>

                                    <!-- Третья строка: Производитель -->
                                    <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Производитель:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Manufactureres.Manufacturer}" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    <!-- Четвертая строка: Поставщик -->
                                    <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Поставщик:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Supplieres.Supplier}" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    <!-- Пятая строка: Цена -->
                                    <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Цена:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Цена без скидки -->
                                            <TextBlock Text="{Binding Price, StringFormat={}{0} ₽}" 
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Margin="5,0,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#E53935"/>
                                                        <Setter Property="TextDecorations" Value="None"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Discount, Converter={StaticResource GuestDiscountToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Foreground" Value="Red"/>
                                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Итоговая цена -->
                                            <TextBlock FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="Black"
                                                       Margin="5,0,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Discount, Converter={StaticResource GuestDiscountToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource GuestPriceDisplayConverter}">
                                                        <Binding Path="Price"/>
                                                        <Binding Path="Discount"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Шестая строка: Единица измерения -->
                                    <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Единица измерения:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Measurement}" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    <!-- Седьмая строка: Количество на складе -->
                                    <Grid Grid.Row="6" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Количество на складе:" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="130"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Quantity}" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Margin="5,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#333333"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Quantity}" Value="0">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Артикул -->
                                    <TextBlock Grid.Row="7" Grid.Column="1" 
                                               Text="{Binding Article, StringFormat={}Артикул: {0}}" 
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Кнопка возврата -->
        <Border Grid.Row="2" Padding="10">
            <Button x:Name="BackButton" 
                    Content="ВЕРНУТЬСЯ НА ГЛАВНУЮ" 
                    Click="BackButton_Click" 
                    Width="250" 
                    FontSize="16" 
                    HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</Page>