<Window x:Class="ShoeStore.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
            <Setter Property="Width" Value="150"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Форма редактирования -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Номер заказа -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Номер заказа:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding OrderNumber}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>

                    <!-- Артикул заказа -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Артикул заказа:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Article}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>

                    <!-- Товар -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Товар:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Products}"
                                  DisplayMemberPath="Types.Type"
                                  SelectedValuePath="Article"
                                  SelectedValue="{Binding SelectedProductArticle}"
                                  Style="{StaticResource ComboBoxStyle}"/>
                    </Grid>

                    <!-- Количество -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Количество:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Quantity}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>

                    <!-- Дата заказа -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Дата заказа:" Style="{StaticResource LabelStyle}"/>
                        <DatePicker Grid.Column="1" 
                                    SelectedDate="{Binding OrderDate}"
                                    Style="{StaticResource DatePickerStyle}"/>
                    </Grid>

                    <!-- Дата доставки -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Дата доставки:" Style="{StaticResource LabelStyle}"/>
                        <DatePicker Grid.Column="1" 
                                    SelectedDate="{Binding DeliveryDate}"
                                    Style="{StaticResource DatePickerStyle}"/>
                    </Grid>
                </StackPanel>

                <!-- Правая колонка -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Адрес -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Адрес:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Addresses}"
                                  DisplayMemberPath="Address"
                                  SelectedValuePath="Id_address"
                                  SelectedValue="{Binding SelectedAddressId}"
                                  Style="{StaticResource ComboBoxStyle}"/>
                    </Grid>

                    <!-- Пользователь -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Пользователь:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Users}"
                                  DisplayMemberPath="Fio"
                                  SelectedValuePath="Id_user"
                                  SelectedValue="{Binding SelectedUserId}"
                                  Style="{StaticResource ComboBoxStyle}"/>
                    </Grid>

                    <!-- Статус -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Статус:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Statuses}"
                                  DisplayMemberPath="Status"
                                  SelectedValuePath="Id_status"
                                  SelectedValue="{Binding SelectedStatusId}"
                                  Style="{StaticResource ComboBoxStyle}"/>
                    </Grid>

                    <!-- Код -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Код:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Code}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>

                    <!-- Поле для нового адреса (если не найден в списке) -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Новый адрес:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding NewAddress}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Visibility="{Binding NewAddressVisibility}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ОТМЕНА" 
                    Click="CancelButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#9E9E9E"
                    Foreground="White"/>

            <Button Content="СОХРАНИТЬ" 
                    Click="SaveButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#4CAF50"
                    Foreground="White"/>

            <!-- Кнопка удаления (только для редактирования) -->
            <Button Content="УДАЛИТЬ" 
                    Click="DeleteButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#F44336"
                    Foreground="White"
                    Visibility="{Binding DeleteButtonVisibility}"/>
        </StackPanel>
    </Grid>
</Window>