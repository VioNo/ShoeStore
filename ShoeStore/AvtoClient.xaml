<Page x:Class="ShoeStore.AvtoClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoeStore"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизованный клиент">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <!-- Стиль для карточки товара -->
            <Style x:Key="ProductCardStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="10,5,10,5"/>
            </Style>

            <!-- Стиль для заголовков в карточке -->
            <Style x:Key="LabelStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#666666"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Width" Value="130"/>
            </Style>

            <!-- Стиль для значений в карточке -->
            <Style x:Key="ValueStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <!-- Стиль для названия товара -->
            <Style x:Key="ProductNameStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <!-- Стиль для цены -->
            <Style x:Key="PriceStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#E53935"/>
            </Style>

            <!-- Базовый стиль для скидки -->
            <Style x:Key="DiscountBaseStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Padding" Value="5 2"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с информацией о пользователе --><!--
        <Border Grid.Row="0" Style="{StaticResource FormHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                --><!-- Заголовок слева --><!--
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Style="{StaticResource HeaderText}" Text="ПРОСМОТР ТОВАРОВ - АВТОРИЗОВАННЫЙ КЛИЕНТ"/>
                </StackPanel>

                --><!-- Информация о пользователе справа --><!--
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="UserInfoTextBlock" 
                               Style="{StaticResource HeaderText}"
                               FontSize="14"
                               Margin="0,0,20,0"
                               VerticalAlignment="Center"/>
                    <Button x:Name="LogoutButton" 
                            Content="ВЫЙТИ" 
                            Click="LogoutButton_Click" 
                            Width="80"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        --><!-- Основной контент с вертикальным скроллом --><!--
        <Border Grid.Row="1" Background="White" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="5">
                <ItemsControl x:Name="ItemsControlTovar" 
                              ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            --><!-- Вертикальный StackPanel для отображения списком --><!--
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            --><!-- Каждая карточка товара как строка таблицы --><!--
                            <Border Style="{StaticResource ProductCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        --><!-- Столбец для фото --><!--
                                        <ColumnDefinition Width="Auto"/>
                                        --><!-- Столбец для остальных данных --><!--
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        --><!-- Первая строка: Категория и Наименование товара --><!--
                                        <RowDefinition Height="Auto"/>
                                        --><!-- Вторая строка: Описание и Скидка --><!--
                                        <RowDefinition Height="Auto"/>
                                        --><!-- Третья строка: Производитель --><!--
                                        <RowDefinition Height="Auto"/>
                                        --><!-- Четвертая строка: Поставщик --><!--
                                        <RowDefinition Height="Auto"/>
                                        --><!-- Пятая строка: Цена --><!--
                                        <RowDefinition Height="Auto"/>
                                        --><!-- Шестая строка: Единица измерения --><!--
                                        <RowDefinition Height="Auto"/>
                                        --><!-- Седьмая строка: Количество на складе --><!--
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    --><!-- Фото товара (занимает все строки в первом столбце) --><!--
                                    <Border Grid.Row="0" Grid.Column="0" 
                                            Grid.RowSpan="7" 
                                            Margin="0,0,15,0"
                                            Width="100" 
                                            Height="100">
                                        <Image Source="{Binding Photo, Converter={StaticResource ImagePathConverter}}" 
                                               Stretch="Uniform"/>
                                    </Border>

                                    --><!-- Первая строка: Категория товара и Наименование товара --><!--
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        --><!-- Категория товара --><!--
                                        <TextBlock Text="Категория товара:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Categories.Category}" 
                                                   Style="{StaticResource ValueStyle}"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    --><!-- Наименование товара (на той же строке справа) --><!--
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding Types.Type}" 
                                               Style="{StaticResource ProductNameStyle}"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,0,5"/>

                                    --><!-- Вторая строка: Описание товара и Скидка --><!--
                                    <Grid Grid.Row="1" Grid.Column="1" Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        --><!-- Описание товара --><!--
                                        <TextBlock Text="Описание товара:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Description}" 
                                                   Style="{StaticResource ValueStyle}"
                                                   Margin="5,0,0,0"
                                                   MaxHeight="40"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>

                                    --><!-- Скидка с изменяемым цветом --><!--
                                    <Border Grid.Row="1" Grid.Column="1" 
                                            Style="{StaticResource DiscountBaseStyle}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,2,0,0">

                                        --><!-- Динамический Background через конвертер --><!--
                                        <Border.Background>
                                            <Binding Path="Discount" Converter="{StaticResource DiscountColorConverter}"/>
                                        </Border.Background>

                                        --><!-- Видимость через конвертер --><!--
                                        <Border.Visibility>
                                            <Binding Path="Discount" Converter="{StaticResource DiscountToVisibilityConverter}"/>
                                        </Border.Visibility>

                                        <TextBlock Text="{Binding Discount, StringFormat={}{0}%}" 
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="11"/>
                                    </Border>

                                    --><!-- Третья строка: Производитель --><!--
                                    <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Производитель:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Manufactureres.Manufacturer}" 
                                                   Style="{StaticResource ValueStyle}"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    --><!-- Четвертая строка: Поставщик --><!--
                                    <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Поставщик:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Supplieres.Supplier}" 
                                                   Style="{StaticResource ValueStyle}"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    --><!-- Пятая строка: Цена --><!--
                                    <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Цена:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Price, StringFormat={}{0} ₽}" 
                                                   Style="{StaticResource PriceStyle}"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    --><!-- Шестая строка: Единица измерения --><!--
                                    <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Единица измерения:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Measurement}" 
                                                   Style="{StaticResource ValueStyle}"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    --><!-- Седьмая строка: Количество на складе --><!--
                                    <Grid Grid.Row="6" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Количество на складе:" 
                                                   Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Quantity}" 
                                                   Style="{StaticResource ValueStyle}"
                                                   Margin="5,0,0,0"/>
                                    </Grid>

                                    --><!-- Артикул (в самом низу справа) --><!--
                                    <TextBlock Grid.Row="7" Grid.Column="1" 
                                               Text="{Binding Article, StringFormat={}Артикул: {0}}" 
                                               FontSize="10"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        --><!-- Кнопка возврата --><!--
        <Border Grid.Row="2" Padding="10">
            <Button x:Name="BackButton" 
                    Content="ВЕРНУТЬСЯ НА ГЛАВНУЮ" 
                    Click="BackButton_Click" 
                    Width="250" 
                    FontSize="16" 
                    HorizontalAlignment="Left"/>
        </Border>-->
    </Grid>
</Page>